<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="IP-Address"
            android:id="@+id/ipAddress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:gravity="left|center"
            android:layout_above="@+id/portNumberInput" android:layout_alignParentTop="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ipAddressInput"
            android:layout_toEndOf="@+id/ipAddress"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:text="192.168.43.241"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/ipAddress"
            android:digits="0123456789."
            android:inputType="number"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/connect" android:layout_alignRight="@+id/ipAddressInput"
            android:layout_alignEnd="@+id/ipAddressInput" android:layout_below="@+id/ipAddressInput"
            android:layout_toRightOf="@+id/portNumberInput" android:layout_toEndOf="@+id/portNumberInput"/>
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar" android:layout_below="@+id/connect"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:progress="50"
            android:layout_toEndOf="@+id/powerText" android:layout_toRightOf="@+id/powerText"
            android:indeterminate="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Power"
            android:id="@+id/powerText"
            android:layout_alignBottom="@+id/seekBar" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignTop="@+id/seekBar"
            android:gravity="left|center"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/motorSelectionSpinner" android:layout_below="@+id/seekBar"
            android:layout_toRightOf="@+id/selAxisTextView" android:layout_toEndOf="@+id/selAxisTextView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negative Power"
            android:id="@+id/negativePower"
            android:layout_toStartOf="@+id/ipAddressInput"
            android:layout_below="@+id/positivePower"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/connect" android:layout_alignEnd="@+id/connect"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Positive Power"
            android:id="@+id/positivePower"
            android:layout_toEndOf="@+id/negativePower"
            android:layout_below="@+id/motorSelectionSpinner"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/connect" android:layout_alignEnd="@+id/connect"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Axis:"
            android:id="@+id/selAxisTextView" android:layout_above="@+id/positivePower"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/motorSelectionSpinner"
            android:layout_toStartOf="@+id/seekBar" android:gravity="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/portNumberInput" android:layout_alignBottom="@+id/connect"
            android:layout_below="@+id/ipAddressInput" android:layout_toRightOf="@+id/powerText"
            android:layout_toEndOf="@+id/powerText" android:text="8889"
            android:digits="0123456789."
            android:inputType="number"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Port"
            android:id="@+id/portText" android:layout_below="@+id/ipAddressInput"
            android:layout_above="@+id/seekBar" android:layout_toLeftOf="@+id/portNumberInput"
            android:layout_toStartOf="@+id/portNumberInput" android:gravity="left|center"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="X"
                android:id="@+id/textView2" android:layout_below="@+id/negativePower"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/xValue"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Y"
                android:id="@+id/textView3"
                android:layout_toStartOf="@+id/xValue"
                android:layout_below="@+id/textView2" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/xValue"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/xValue" android:layout_below="@+id/negativePower"
                android:layout_toRightOf="@+id/textView2" android:layout_toEndOf="@+id/textView2" android:text="0"
                android:digits="0123456789"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/yValue"
                android:layout_toEndOf="@+id/textView3"
                android:text="0"
                android:layout_alignTop="@+id/textView3"
                android:layout_below="@+id/xValue"
                android:digits="0123456789"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Z"
                  android:id="@+id/textView4"
                  android:layout_below="@+id/yValue" android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true" android:layout_alignBottom="@+id/zValue"
                  android:layout_toLeftOf="@+id/yValue" android:layout_toStartOf="@+id/yValue"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
                  android:ems="10" android:id="@+id/zValue"
                  android:layout_toEndOf="@+id/textView4" android:text="0"
                  android:layout_below="@+id/yValue" android:layout_alignLeft="@+id/yValue"
                  android:layout_alignStart="@+id/yValue"
                  android:digits="0123456789"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Position"
                android:id="@+id/goToPositionButton"
                android:layout_toEndOf="@+id/xValue" android:layout_marginLeft="11dp"
                android:layout_alignBaseline="@+id/yValue" android:layout_alignBottom="@+id/yValue"
                android:layout_toRightOf="@+id/xValue"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignRight="@+id/motorSelectionSpinner"
            android:layout_alignEnd="@+id/motorSelectionSpinner" android:layout_alignParentBottom="true"
            android:id="@+id/input_fetcher" android:inputType="none"/>
</RelativeLayout>